package com.boge.android_0618_notebook.utils;

import java.io.File;
import java.io.IOException;

import android.media.MediaRecorder;
import android.os.Environment;
import android.util.Log;

public class MyMediarecorder {
	private File file = null;
	private MediaRecorder recorder = null;

	/**
	 * ¿ªÊ¼Â¼Òô
	 */
	public void start() {
		Log.i("boge", "start");
		try {
			file=File.createTempFile(Environment.getExternalStorageDirectory()
					.getAbsolutePath() + File.separator , ".amr");
			recorder = new MediaRecorder();
			recorder.setAudioSource(MediaRecorder.AudioSource.MIC);
			recorder.setOutputFormat(MediaRecorder.OutputFormat.MPEG_4);
			recorder.setAudioEncoder(MediaRecorder.AudioEncoder.AMR_NB);
			recorder.setOutputFile(file.toString());
			Log.i("boge",file.toString());
			recorder.prepare();
			recorder.start();
		} catch (IOException e) {
			e.printStackTrace();
		}
	}

	/**
	 * Í£Ö¹Â¼Òô
	 */
	public void stop() {
		Log.i("boge", "stop");
		if (isExist()) {
			recorder.stop();
			recorder.release();
		}

	}

	public boolean isExist() {
		if (recorder != null) {
			return true;
		}
		return false;
	}

}
